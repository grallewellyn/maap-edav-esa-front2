{
  "compilerOptions": {
    "declaration": false,
    "module": "esnext",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*"
  ]
}
